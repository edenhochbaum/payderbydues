{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.payderbydues.com/schemas/example.json",
	"title": "Pay Derby Dues RDS Schema",
	"definitions": {
		"tablename": {
			"type": "string",
			"minLength": 2,
			"maxLength": 25
		},
		"columnname": {
			"type": "string",
			"minLength": 2,
			"maxLength": 25
		}
	},
	"type": "array",
	"minItems": 1,
	"items": {
		"title": "table",
		"type": "object",
		"properties": {
			"name": {
				"$ref" : "#/definitions/tablename"
			},
			"columns": {
				"description": "the columns in the table",
				"type": "array",
				"minItems": 1,
				"items": {
					"title": "column",
					"type": "object",
					"properties": {
						"name": {
							"$ref": "#/definitions/columnname"
						},
						"datatype": {
							"description": "the type of postgres datatype this is",
							"type": "string"
						},
						"foreignkey": {
							"type": "object",
							"properties": {
								"foreigntablename": {
									"$ref" : "#/definitions/tablename"
								},
								"foreigncolumnname": {
									"$ref": "#/definitions/columnname"
								}
							},
							"required": ["foreigntablename", "foreigncolumnname"],
							"additionalProperties": false
						}
					},
					"additionalProperties": false,
					"required": ["name", "datatype"]
				}
			},
			"uniquenessconstraints": {
				"type": "array",
				"minItems": 1,
				"items": {
					"title": "uniqueness constraint",
					"description": "this is just a way of identifying that a tuple of columns needs to be unique in the table",
					"type": "object",
					"properties": {
						"columnname": "string"
					},
					"additionalProperties": false,
					"required": ["columnname"]
				}
			}
		},
		"additionalProperties": false,
		"required": ["name", "columns"]
	}
}
